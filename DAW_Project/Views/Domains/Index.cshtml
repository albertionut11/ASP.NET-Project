@{
    ViewBag.Title = "Lista domenii";
}
<h2>@ViewBag.Title</h2>
<br />

@foreach (var domain in ViewBag.Domains)
{
    @Html.Label("Domain_name", "Domeniu:")
    <p><b>@domain.Domain_name</b></p>
    @Html.Label("Domain_description", "Descriere:")
    <p>@domain.Domain_description</p>
    <a class="btn alert-success" href="/Domains/Show/@domain.Id">Afisare articole</a>
    @if(User.IsInRole("Admin")){
        <a class="btn alert-success" href="/Domains/Edit/@domain.Id">Editare domeniu</a>
    }
    <br />
    <hr />
    <br />
}
<br />
<a class="btn btn-success" href="/Domains/New">Adauga un nou domeniu!</a>
<br />

