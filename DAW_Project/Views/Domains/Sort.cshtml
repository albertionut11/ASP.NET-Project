@model DAW_Project.Models.Domain



<h2>@ViewBag.Title</h2>

<br />

<h3>@Model.Domain_name</h3>



<br />


@foreach (DAW_Project.Models.Article item in ViewBag.Articles)
{
    <div class="card" style="width: 18rem;">

        <div class="card-body">

            <h5 class="card-title">@item.Title </h5>
            <a class="btn btn-success" href="/Articles/Show/@item.Article_Id">Afisare articol</a>

        </div>


    </div>
    <br />
}


<a class="btn alert-success" href="/Domains/Index/">Afisare lista domenii</a>
<a class="btn alert-success" href="/Domains/Sort/@Model.Id">Sortare alfabetica</a>
<a class="btn alert-success" href="/Domains/SortByDate/@Model.Id">Sortare Dupa Data</a>
<br />

